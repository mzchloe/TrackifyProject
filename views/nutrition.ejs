    <%- include('./partials/tracknutriform'); %>

    <h2>Nutrition Diary</h2>
    <p><%= data[0]?.date.toLocaleDateString() %></p>

   <h3>Breakfast</h3>
   <table> 
     <tr class="nutrition-column-names">
       <td>Food Item</td>
       <td>Portion</td>
       <td>Unit</td>
       <td>Calories</td>
       <td>Carbs</td>
       <td>Fat</td>
       <td>Protein</td>
       <td>Edit</td>
       <td>Delete</td>
      
     </tr>
     <% data.forEach((record) => { %>
      <% if (record.mealType?.toString() == 'breakfast') { %>
     <tr>
       <th><%= record.foodType %></th>
       <th><%= record.portion %></th>
       <th><%= record.portionUnit %></th>
       <th><%= record.calories %></th>
       <th><%= record.carbs %></th>
       <th><%= record.fat %></th>
       <th><%= record.protein %></th> 
       <th><a href="/nutri/update/<%= record.id %> ">Edit</a></th> 
       <th>
        <form action="/nutri/delete/<%= record.id %>?_method=DELETE" method="post">
          <button type="submit">delete</button>
       </th> 
     </tr> 
