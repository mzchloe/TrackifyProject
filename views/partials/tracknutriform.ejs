<div class="nutri-tracking-container">
    <form action="/nutri/tracknutrition" method="post">
        <span class="nutri-form">
            <!-- <label  for="date">Date</label> -->
            <input type="date" name="date" id="date" />
        
        <select name="mealType" class="meal-input" id="meal">
            <option value="breakfast">breakfast</option>
            <option value="lunch">lunch</option>
            <option value="dinner">dinner</option>
            <option value="snack">snack</option>
          </select>         
        <input type="text" name="foodType" placeholder="food/drink item" id="food"/>
        <input type="number" name="portion" placeholder="portion" id="portion"/>
        <input type="text" name="portionUnit" placeholder="gram/ml" id="size"/>
        <input type="number" name="calories" placeholder="calories" id="calories"/>
        <input type="number" name="carbs" placeholder="carbs" id="carbs"/>
        <input type="number" name="fat" placeholder="fat" id="fat"/>
        <input type="number" name="protein" placeholder="protein" id="protein"/>
        <button type="submit" id="add">ADD</button>
    </span>
    </form>
    
</div>

